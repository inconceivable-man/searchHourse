<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/news_imageViewId"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/news_title_textViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/news_imageViewId"
        android:paddingLeft="8dp"
        android:text="@string/hello_world"
        android:textColor="#1D1D1D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_summary_textViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/news_imageViewId"
        android:layout_below="@id/news_title_textViewId"
        android:layout_toRightOf="@id/news_imageViewId"
        android:paddingLeft="8dp"
        android:text="@string/hello_world"
        android:textColor="#8F8F8F"
        android:textSize="12sp" />

</RelativeLayout>